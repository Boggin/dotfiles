[[core]
    autocrlf = true
    safecrlf = false
    whitespace = cr-at-eol
    excludesfile = ~/.gitignore
    editor = nvim
[alias]
    ci = commit
    cm = commit -m
    cam = commit -am
    co = checkout
    df = diff
    dfc = diff --cached
    dft = diff --text
    st = status -sb
    br = branch
    lg = log -p
    lol = log --graph --decorate --oneline
    lola = log --graph --decorate --oneline --all
    hist = log --graph --full-history --pretty="%x1b[31m%h%x20%x1b[32m%ar%x1b[0m%x20%s%x20%C(bold)%d%Creset%x20%x1b[33m(%an)%x1b[0m"
    history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    ls = ls-files
    mn = merge --no-commit
[color]
    ui = true
[diff]
    tool = meld
    mnemonicprefix = true
    guitool = meld
[difftool "meld"]
    path = "C:\\Program Files (x86)\\Meld\\Meld.exe"
[merge]
    tool = meld
    prompt = false
    keepBackup = false
    keepTemporaries = false
    stat = true
[mergetool "meld"]
    path = "C:\\Program Files (x86)\\Meld\\Meld.exe"
    trustExitCode = true
[advice]
    statusHints = false
[branch]
    autosetupmerge = true
    autosetuprebase = always
[push]
    default = tracking
    followTags = true
[help]
    format = web
[web]
    browser = chrome
[browser "chrome"]
    path = "C:\\program files\\Google\\Chrome\\Application\\chrome.exe"
[rerere]
    enabled = true
    autoupdate = true
[commit]
    template = ~/.git-prepare-commit-msg
    gpgsign = true
[credential]
    helper = manager
[user]
    name = Richard Bogle
    email = richard.bogle@unsettling.co.uk
    signingkey = FFBF8D3EEB133EED
[gpg]
    program = "C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe"
